{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "pixil/*": [
                "submodules/pixil/src/*"
            ]
        },
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}