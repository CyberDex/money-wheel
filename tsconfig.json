{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "Pixil/*": [
                "submodules/Pixil/src/*"
            ],
            "enums/*": [
                "helpers/enum/*"
            ],
            "interfaces/*": [
                "helpers/interfaces/*"
            ]
        },
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}