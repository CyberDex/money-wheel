{
	"compilerOptions": {
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"module": "esnext",
		"rootDir": ".",
		"baseUrl": ".",
		"skipLibCheck": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"target": "ES6",
		"sourceMap": true,
		"noImplicitAny": false,
		"strict": false,
		"resolveJsonModule": true,
		"paths": {
			"pixil": ["src/submodules/pixil/src/index"]
		}
	},
	"include": ["src/**/*.ts"]
}
