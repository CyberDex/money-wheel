{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@*": [
                "*",
                "../submodules/*"
            ]
        },
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": false,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}